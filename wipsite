<script>
function openPage(pageId) {
  document.getElementById('home').style.display = 'none';
  document.getElementById('suggestions').style.display = 'none';
  document.getElementById(pageId).style.display = 'block';
}

function closePage(pageId) {
  document.getElementById(pageId).style.display = 'none';
  document.getElementById('home').style.display = 'flex';
  document.getElementById('suggestions').style.display = 'block';
}

// تبديل اللغة
let lang = "en";
function toggleLang() {
  if (lang === "en") {
    document.getElementById("title").innerText = "المزرعة الذكية";
    document.getElementById("subtitle").innerText = "ثورة في عالم الزراعة";
    document.querySelectorAll(".menu button")[0].innerText = "حول";
    document.querySelectorAll(".menu button")[1].innerText = "ماذا يفعل";
    document.querySelectorAll(".menu button")[2].innerText = "تواصل";
    document.getElementById("suggest-title").innerText = "اقتراحات";
    document.getElementById("suggest-text").innerText = "نحن نؤمن بأي اقتراح يمكن أن يطور ويعزز مشروعنا.";
    document.querySelector(".lang-toggle").innerText = "EN";
    lang = "ar";
  } else {
    document.getElementById("title").innerText = "FARM BOT";
    document.getElementById("subtitle").innerText = "Revolution in the world of agriculture";
    document.querySelectorAll(".menu button")[0].innerText = "About";
    document.querySelectorAll(".menu button")[1].innerText = "What it does";
    document.querySelectorAll(".menu button")[2].innerText = "Contact";
    document.getElementById("suggest-title").innerText = "Suggestions";
    document.getElementById("suggest-text").innerText = "We believe in any suggestion that can develop and enhance our project.";
    document.querySelector(".lang-toggle").innerText = "AR";
    lang = "en";
  }
}
</script>

